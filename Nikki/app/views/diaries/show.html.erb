<% content_for(:title, @diary.title) %>
<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <!-- 日記内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-3'>
              <%= image_tag @diary.diary_image.url, class: 'card-img-top img-fluid', size: '300x200' %>
            </div>
            <div class='col-md-9'>
              <h3 class="d-inline"><%= @diary.title %></h3>
              <%= render 'crud_menus', diary: @diary if current_user.own?(@diary) %>
              <ul class="list-inline">
                <li class="list-inline-item">by <%= @diary.user.decorate.user_name %></li>
                <li class="list-inline-item"><%= l @diary.created_at, format: :long  %></li>
              </ul>
            </div>
          </div>
          <p><%= simple_format(@diary.body) %></p>
        </div>
      </article>
    </div>
  </div>

  <!-- コメントフォーム -->
  <%= render 'comments/form', { diary: @diary, comment: @comment } %>

  <!-- コメントエリア -->
  <%= render 'comments/comments', { comments: @comments } %>
</div>
